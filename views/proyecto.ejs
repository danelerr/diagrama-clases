      />

      <div class="product-info">

        <p>Crear un nuevo diagrama</p>
        <p>
          Comienza aqui para empezar a crear diagramas de clases completamente colaborativos
        </p>
        <form action="/store" method="POST">
          <label for="user" class="label">Nombre</label>
          <input type="text" name="name" id="usuario" class="input input-email" placeholder="ejemplo" autofocus required>
          <input type="submit"  class="primary-button login-button" value="Crear diagrama">
        </form>
      </div>
    </aside>


    
    <section class="main-container">
      <div style="padding-left: 2rem;">
        <h1><strong>Proyectos</strong></h1>
      </div>
      <div class="cards-container">

        <% proyect.forEach(function(project) { %>
        <div class="product-card">
          <img
            src="https://www.researchgate.net/profile/Iwara-Arikpo/publication/271341309/figure/fig4/AS:759210509864962@1558021299670/Level-1-Class-Diagram-of-The-Project-Manager-V-10.png"
            alt=""
          />
          <div class="product-info">
            <div>
              <a href="pizarra/<%= project.id %>"><%= project.name %></a>
            </div>
            <figure>
              <button class="primary-button add-to-cart-button"  onclick="copyPageUrlinvitacion(`https://diagram-sequence.onrender.com/pizarra/<%= project.id %>`)">
                Copiar URL
              </button>
            </figure>
          </div>
        </div>
        <% }); %>



      </div>
    </section>

<script>
  function copyPageUrl() {
    const pageUrl = window.location.href;
    const tempInput = document.createElement('input');
    document.body.appendChild(tempInput);
    tempInput.value = pageUrl;
    tempInput.select();
    document.execCommand('copy');
    document.body.removeChild(tempInput);
  }

  function copyPageUrlinvitacion(url) {
    const tempInput = document.createElement('input');
    tempInput.value = url;
    document.body.appendChild(tempInput);
    tempInput.select();
    document.execCommand('copy');
    document.body.removeChild(tempInput);
  }


</script>

