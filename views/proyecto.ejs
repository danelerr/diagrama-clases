    <aside id="shoppingCartContainer" class="inactive">
    </aside>


    <!-- El detalle de producto, tal vez para crear un nuevo proy-->
    <aside id="productDetail" class="inactive">
      <div class="product-detail-close">
        <img src="resources/css/icon_close.png" alt="close" />
      </div>

      <img
        src="https://img.freepik.com/premium-vector/black-stripes-with-green-lines-background_518299-7342.jpg?semt=ais_hybrid"
